<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
   

    <title>Profiles</title>
  </head>
  <body>

 



    <nav class="navbar sticky-top navbar-dark bg-dark">
        <a href="/profiles"><img class='icon' src="/assets/Icon.png" width="50" height="50" alt=""></a>
        <a class="btn btn-warning" href="/profiles/new" role="button" id="CreateAccount">Create Account</a> 
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search Users" aria-label="Search">
            <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
        </form>
    </nav>
    



<div class = "container">
  <div class= "row">
      <% @f.each do |b| %>
        <div class= "col-4">
              <div class="showprofile">    
                  <a><img class="HomeProfilePicture"  src="/assets/NoPhoto"></a>
                  <div>Name: <%= b.name %> </div>
                  <div>Age: <%= b.age %></div>
                  <div>Description: <%= b.description %></div>
                  <div>Likes: <%= b.likes %></div>
                  <div>Dislikes: <%= b.dislikes %></div>
                  <a class="btn btn-success" href="/profiles/<%=b.id%>" role="button" id="ViewAccount">View Account</a>
                </div>

              </div>
          <%end%>
        </div>
    </div>
 


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>







